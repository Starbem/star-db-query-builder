{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "ES2021.WeakRef"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": [
    "./**/*",
    ".eslintrc.json"
  ],
  "exclude": [
    "**/tests",
    "**/__tests__",
    "./eslint-local-rules",
    "./jest.config.ts",
    "**/dist",
    "**/build",
    "**/node_modules"
  ]
}