{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}